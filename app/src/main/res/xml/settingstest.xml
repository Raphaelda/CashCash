<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory
      android:key="pfreCatAppSet"
      android:title="App settings">

      <ListPreference
          android:defaultValue="1"
          android:entries="@array/devise_spin"
          android:entryValues="@array/devise_spin"
          android:key="list_preference_devices"
          android:title="Default device" />
      <ListPreference
          android:defaultValue="1"
          android:entries="@array/theme"
          android:entryValues="@array/devise_spin"
          android:key="list_preference_theme"
          android:title="Theme" />
  </PreferenceCategory>

  <PreferenceCategory
      android:key="prefCatNotif"
      android:title="Notification settings">
<SwitchPreference
    android:key="switchPrefNotif"
    android:title="Notification">
</SwitchPreference>

  </PreferenceCategory>
</PreferenceScreen>