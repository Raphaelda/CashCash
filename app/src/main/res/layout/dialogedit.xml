<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_shape"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="3dp"
        android:paddingRight="5dp">


        <RadioButton
            android:id="@+id/fullyRef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="  Fully refunded"
            android:textSize="18sp"
            android:layout_gravity="center|start"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"

        >


        <RadioButton
            android:id="@+id/partRef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center|start"
            android:text="  Partially refunded"
            android:textSize="18sp"
            />


      <EditText
          android:layout_width="50dp"
          android:layout_gravity="center|end"
          android:layout_height="match_parent"
          android:id="@+id/amountEdit"
          android:textSize="18sp"
          android:inputType="numberDecimal"
          android:textAlignment="center"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|end"
            android:text="â‚¬"
            android:id="@+id/deviceTex"
            android:gravity="center"
            android:textSize="18sp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp">

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_left"
            android:textColor="@android:color/background_light"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:textColor="@android:color/background_light"
            android:background="@drawable/rounded_button_rigth"
            android:layout_marginBottom="5dp"

            />

    </LinearLayout>

</LinearLayout>